                <li>DuneRef_Medicine</li>
                <li>DuneRef_Computers</li>
            </researchPrerequisites>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/ThingDef[
                   defName = "BabyDecoration"
                or defName = "ToyBox"
            ]/researchPrerequisites
        </xpath>
        <value>
            <researchPrerequisites Inherit="False">
