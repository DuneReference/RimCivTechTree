<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<!-- Change Research Prerequisites -->
	
	<!-- TreeSowing -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[@Name = "TreeBase"]/plant/sowResearchPrerequisites
		</xpath>
		<value>
			<sowResearchPrerequisites>
				<li>DuneRef_Pottery</li>
			</sowResearchPrerequisites>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName = "PlantPot_Bonsai"]/researchPrerequisites
		</xpath>
		<value>
			<researchPrerequisites>
				<li>DuneRef_Irrigation</li>
			</researchPrerequisites>
		</value>
	</Operation>

	<!--Devilstrand -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName = "Plant_Devilstrand"]/plant/sowResearchPrerequisites
		</xpath>
		<value>
			<sowResearchPrerequisites>
				<li>DuneRef_Irrigation</li>
			</sowResearchPrerequisites>
		</value>
	</Operation>

	<!-- Cocoa -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName = "Plant_TreeCocoa"]/plant/sowResearchPrerequisites
		</xpath>
		<value>
			<sowResearchPrerequisites Inherit="False">
				<li>DuneRef_Irrigation</li>
			</sowResearchPrerequisites>
		</value>
	</Operation>

	<!-- PsychiteBrewing -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName = "PsychiteTea"]/recipeMaker/researchPrerequisite
		</xpath>
		<value>
			<researchPrerequisite>DuneRef_Health</researchPrerequisite>
		</value>
	</Operation>

	<!-- Brewing -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[
				   defName = "Brewery"
				or defName = "FermentingBarrel"
			]/researchPrerequisites
		</xpath>
		<value>
			<researchPrerequisites>
				<li>DuneRef_WritingAndCulture</li>
			</researchPrerequisites>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName = "FermentingBarrel"]/researchPrerequisites
		</xpath>
		<value>
			<researchPrerequisites>
				<li>DuneRef_WritingAndCulture</li>
			</researchPrerequisites>
		</value>
	</Operation>

	<!-- PassiveCooler -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName = "PassiveCooler"]/researchPrerequisites
		</xpath>
		<value>
			<researchPrerequisites>
				<li>DuneRef_Health</li>
			</researchPrerequisites>
		</value>
	</Operation>

	<!-- Pemmican -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/RecipeDef[
				   defName = "Make_Pemmican"
				or defName = "Make_PemmicanBulk"
			]/researchPrerequisite
		</xpath>
		<value>
			<researchPrerequisite>DuneRef_Health</researchPrerequisite>
		</value>
	</Operation>

	<!-- RecurveBow -->

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName = "Bow_Recurve"]/recipeMaker/researchPrerequisite
		</xpath>
		<value>
			<researchPrerequisite>DuneRef_Archery</researchPrerequisite>
		</value>
	</Operation>
	
	<!-- Remove Old Research Nodes -->

	<Operation Class="PatchOperationRemove">
		<xpath>
			/Defs/ResearchProjectDef[
				   defName = "Devilstrand"
				or defName = "PsychoidBrewing"
				or defName = "PassiveCooler"
				or defName = "Pemmican"
			]
		</xpath>
	</Operation>

