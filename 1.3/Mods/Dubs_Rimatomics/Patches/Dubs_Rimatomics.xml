<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Move mods research to hidden tab -->

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "RimatomicsActivate"
            ]/tab
        </xpath>
        <value>
            <tab>DuneRef_Hidden</tab>
        </value>
    </Operation>

    <!-- remove prerequisites so no funky stuff happens when we try to unlock them automatically -->

    <Operation Class="PatchOperationRemove">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "RimatomicsActivate"
            ]/prerequisites
        </xpath>
    </Operation>

    <!-- Add techs to RimCivTechTree researches -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchProjectDef[
                   defName = "DuneRef_NuclearFission"
            ]/modExtensions/li[@Class="DuneRef_RimCivTechTree.ResearchUnlocks"]/researchUnlocks
        </xpath>
        <value>
            <li>RimatomicsActivate</li>
        </value>
    </Operation>

    <!-- Hide tabs created by this mod -->

    <Operation Class="PatchOperationAdd">
        <xpath>
            Defs/ResearchTabDef[defName = "Rimatomics"]
        </xpath>
        <value>
            <modExtensions>
                <li Class="DuneRef_RimCivTechTree.HiddenTab">
                    <hidden>True</hidden>
                </li>
            </modExtensions>
        </value>
    </Operation>

</Patch>