<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Move mods research to hidden tab -->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ResearchProjectDef[
                       defName = "agriculture"
                    or defName = "agricultureII"
                    or defName = "agricultureIII"
                    or defName = "VG_Ambrosia"
                    or defName = "agricultureIV"
                    or defName = "VG_HoneyTree"
                ]/tab
			</xpath>
			<value>
                <tab>DuneRef_Hidden</tab>
            </value>
		</match>
	</Operation>

    <!-- remove prerequisites so no funky stuff happens when we try to unlock them automatically -->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationRemove">
			<xpath>
				Defs/ResearchProjectDef[
				       defName = "agricultureII"
                    or defName = "agricultureIII"
                    or defName = "VG_Ambrosia"
                    or defName = "agricultureIV"
                    or defName = "VG_HoneyTree"
                ]/prerequisites
			</xpath>
		</match>
	</Operation>

    <!-- Add techs to RimCivTechTree researches -->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchProjectDef[
				       defName = "DuneRef_Pottery"
                ]/modExtensions/li[@Class="DuneRef_RimCivTechTree.ResearchUnlocks"]/researchUnlocks
			</xpath>
            <value>
                <li>agriculture</li>
                <li>agricultureII</li>
                <li>agricultureIII</li>
                <li>agricultureIV</li>
            </value>
		</match>
	</Operation>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchProjectDef[
				       defName = "DuneRef_Irrigation"
                ]/modExtensions/li[@Class="DuneRef_RimCivTechTree.ResearchUnlocks"]/researchUnlocks
			</xpath>
            <value>
                <li>VG_HoneyTree</li>
                <li>VG_Ambrosia</li>
            </value>
		</match>
	</Operation>

    <!-- Hide tabs created by this mod -->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchTabDef[defName = "VG"]
			</xpath>
            <value>
				<modExtensions>
					<li Class="DuneRef_RimCivTechTree.HiddenTab">
						<hidden>True</hidden>
					</li>
				</modExtensions>
            </value>
		</match>
	</Operation>

    <!-- Don't want to show wild trees on research trees since it's duplicates with plantable trees (both just say "Apple Tree" for example)-->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ThingDef[@Name="VG_WildFruitTree"]/plant
			</xpath>
            <value>
                <sowResearchPrerequisites Inherit="False">
                </sowResearchPrerequisites>
            </value>
		</match>
	</Operation>

</Patch>