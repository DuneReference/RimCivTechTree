<?xml version="1.0" encoding="utf-8" ?>
<Patch>

   <!-- Moving Individual items to different techs -->

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/ThingDef[
                   defName="DuneRef_PeopleMover_PowerHub"
            ]/researchPrerequisites
        </xpath>
        <value>
            <researchPrerequisites Inherit="False">
                <li>DuneRef_Radio</li>
            </researchPrerequisites>
        </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
        <xpath>
            Defs/TerrainDef[
                   @Name="DuneRef_PeopleMover_Terrain_Base"
            ]/researchPrerequisites
        </xpath>
        <value>
            <researchPrerequisites Inherit="False">
                <li>DuneRef_Radio</li>
            </researchPrerequisites>
        </value>
    </Operation>

</Patch>