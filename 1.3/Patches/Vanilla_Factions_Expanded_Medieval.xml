<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Move mods research to hidden tab -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchProjectDef[defName = "VFEM_HeavyCrossbow"]
			</xpath>
			<value>
                <tab>DuneRef_Hidden</tab>
            </value>
		</match>
	</Operation>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ResearchProjectDef[
                       defName = "VFEM_NobleMedievalApparel"
                    or defName = "VFEM_PlagueMask"
                    or defName = "VFEM_TreeHealroot"
                    or defName = "VFEM_MeatSmoking"
                ]/tab
			</xpath>
			<value>
                <tab>DuneRef_Hidden</tab>
            </value>
		</match>
	</Operation>

    <!-- remove prerequisites so no funky stuff happens when we try to unlock them automatically -->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationRemove">
			<xpath>
				Defs/ResearchProjectDef[
                       defName = "VFEM_HeavyCrossbow"
                    or defName = "VFEM_NobleMedievalApparel"
                    or defName = "VFEM_PlagueMask"
                    or defName = "VFEM_TreeHealroot"
                    or defName = "VFEM_MeatSmoking"
                ]/prerequisites
			</xpath>
		</match>
	</Operation>

    <!-- Add techs to RimCivTechTree researches -->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchProjectDef[
				       defName = "DuneRef_Machinery"
                ]/modExtensions/li[@Class="DuneRef_RimCivTechTree.ResearchUnlocks"]/researchUnlocks
			</xpath>
            <value>
				<li>VFEM_HeavyCrossbow</li>
            </value>
		</match>
	</Operation>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchProjectDef[
				       defName = "DuneRef_ComplexClothing"
                ]/modExtensions/li[@Class="DuneRef_RimCivTechTree.ResearchUnlocks"]/researchUnlocks
			</xpath>
            <value>
                <li>VFEM_NobleMedievalApparel</li>
				<li>VFEM_PlagueMask</li>
            </value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchProjectDef[
				       defName = "DuneRef_Irrigation"
                ]/modExtensions/li[@Class="DuneRef_RimCivTechTree.ResearchUnlocks"]/researchUnlocks
			</xpath>
            <value>
                <li>VFEM_TreeHealroot</li>
            </value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchProjectDef[
				       defName = "DuneRef_Masonry"
                ]/modExtensions/li[@Class="DuneRef_RimCivTechTree.ResearchUnlocks"]/researchUnlocks
			</xpath>
            <value>
                <li>VFEM_MeatSmoking</li>
            </value>
		</match>
	</Operation>

    <!-- Hide tabs created by this mod -->

	<!-- Special conditional tab edit since all their techs in various mods are in the same tab -->
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Medieval</li>
		</mods>
		<match Class="PatchOperationConditional">
			<xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions</xpath>
			<match Class="PatchOperationConditional">
				<xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions/li[@Class="DuneRef_RimCivTechTree.HiddenTab"]</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions</xpath>
					<value>
						<li Class="DuneRef_RimCivTechTree.HiddenTab">
							<hidden>True</hidden>
						</li>
					</value>
				</nomatch>
			</match>
			<nomatch Class="PatchOperationAdd">
				<xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]</xpath>
				<value>
					<modExtensions>
						<li Class="DuneRef_RimCivTechTree.HiddenTab">
							<hidden>True</hidden>
						</li>
					</modExtensions>
				</value>
			</nomatch>
		</match>
	</Operation>

</Patch>