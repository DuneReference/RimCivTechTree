<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<!-- Change Research Prerequisites -->

	<!-- VCE_SucculentSowing -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded - Succulents</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ThingDef[
					defName = "VCE_Plant_AloeVera"
					or defName = "VCE_Plant_BunnyEarsCactus"
					or defName = "VCE_Plant_Echeveria"
					or defName = "VCE_Plant_FairyWashboard"
					or defName = "VCE_Plant_JadePlant"
					or defName = "VCE_Plant_PeyotePlant"
					or defName = "VCE_Plant_PincushionPlant"
					or defName = "VCE_Plant_Schlumbergera"
					or defName = "VCE_Plant_SnakePlant"
					or defName = "VCE_Plant_SweetheartPlant"
				]/plant/sowResearchPrerequisites
			</xpath>
			<value>
				<sowResearchPrerequisites>
					<li>DuneRef_Pottery</li>
				</sowResearchPrerequisites>
			</value>
		</match>
	</Operation>



	<!-- Remove Old Research Nodes -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Plants Expanded - Succulents</li>
		</mods>
		<match Class="PatchOperationRemove">
			<xpath>
				/Defs/ResearchProjectDef[
					defName = "VCE_SucculentSowing"
				]
			</xpath>
		</match>
	</Operation>

