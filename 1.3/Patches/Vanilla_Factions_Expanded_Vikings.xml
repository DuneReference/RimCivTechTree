<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Move mods research to hidden tab -->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Vikings</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ResearchProjectDef[defName = "VFEV_Beekeeping"]/tab
			</xpath>
			<value>
                <tab>DuneRef_Hidden</tab>
            </value>
		</match>
	</Operation>

    <!-- Add techs to RimCivTechTree researches -->

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Vikings</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>
				Defs/ResearchProjectDef[
				       defName = "DuneRef_Pottery"
                ]/modExtensions/li[@Class="DuneRef_RimCivTechTree.ResearchUnlocks"]/researchUnlocks
			</xpath>
            <value>
				<li>VFEV_Beekeeping</li>
            </value>
		</match>
	</Operation>

    <!-- Hide tabs created by this mod -->

	<!-- Special conditional tab edit since all their techs in various mods are in the same tab -->
    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Vikings</li>
		</mods>
		<match Class="PatchOperationConditional">
			<xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions</xpath>
			<match Class="PatchOperationConditional">
				<xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions/li[@Class="DuneRef_RimCivTechTree.HiddenTab"]</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]/modExtensions</xpath>
					<value>
						<li Class="DuneRef_RimCivTechTree.HiddenTab">
							<hidden>True</hidden>
						</li>
					</value>
				</nomatch>
			</match>
			<nomatch Class="PatchOperationAdd">
				<xpath>Defs/ResearchTabDef[defName="VanillaExpanded"]</xpath>
				<value>
					<modExtensions>
						<li Class="DuneRef_RimCivTechTree.HiddenTab">
							<hidden>True</hidden>
						</li>
					</modExtensions>
				</value>
			</nomatch>
		</match>
	</Operation>

</Patch>