<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
	<!-- Change Research Prerequisites -->

	<!-- ComplexFurniture -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ThingDef[defName = "Altar"]/researchPrerequisites
			</xpath>
			<value>
				<researchPrerequisites>
					<li>DuneRef_Masonry</li>
				</researchPrerequisites>
			</value>
		</match>
	</Operation>

	<!-- DraconicDrugProduction -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ThingDef[
					   defName = "DraconicAmbrosia"
					or defName = "DragonsBlood"
					or defName = "MoonStone"
				]/recipeMaker/researchPrerequisite
			</xpath>
			<value>
				<researchPrerequisite>DuneRef_Irrigation</researchPrerequisite>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ThingDef[defName = "Jewel_Orchid"]/plant/sowResearchPrerequisites
			</xpath>
			<value>
				<sowResearchPrerequisites>
					<li>DuneRef_Irrigation</li>
				</sowResearchPrerequisites>
			</value>
		</match>
	</Operation>

	<!-- DraconicIncubation -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ThingDef[
					   defName = "DragonPillow"
					or defName = "BasicIncubator"
				]/researchPrerequisites
			</xpath>
			<value>
				<researchPrerequisites>
					<li>DuneRef_Currency</li>
				</researchPrerequisites>
			</value>
		</match>
	</Operation>

	<!-- DraconicAdvancedIncubation -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ThingDef[defName = "AdvancedIncubator"]/researchPrerequisites
			</xpath>
			<value>
				<researchPrerequisites>
					<li>DuneRef_Electricity</li>
				</researchPrerequisites>
			</value>
		</match>
	</Operation>

	<!-- DraconicApparelAndWeapons -->

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ThingDef[
					   defName = "DD_Apparel_ScaleHelm"
					or defName = "DD_Apparel_DragonCrown"
					or defName = "DD_Apparel_ScaleMail"
					or defName = "DD_Apparel_WingCape"
					or defName = "DD_MeleeWeapon_HornedLance"
					or defName = "DD_MeleeWeapon_DrachenSword"
					or defName = "DDMeleeWeapon_ThrumboBattleAxe"
				]/recipeMaker/researchPrerequisite
			</xpath>
			<value>
				<researchPrerequisite>DuneRef_MilitaryTactics</researchPrerequisite>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>
				Defs/ThingDef[defName = "DD_Bow_DoubleCrossbow"]/recipeMaker/researchPrerequisite
			</xpath>
			<value>
				<researchPrerequisite>DuneRef_ReplaceableParts</researchPrerequisite>
			</value>
		</match>
	</Operation>

	<!-- Remove Old Research Nodes -->
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Dragons Descent</li>
		</mods>
		<match Class="PatchOperationRemove">
			<xpath>
				/Defs/ResearchProjectDef[
					   defName = "DraconicDrugProduction"
					or defName = "DraconicIncubation"
					or defName = "DraconicApparelAndWeapons"
					or defName = "DraconicAdvancedIncubation"
				]
			</xpath>
		</match>
	</Operation>

</Patch>